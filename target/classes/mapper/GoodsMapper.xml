<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="team.bishe.wms.mapper.GoodsMapper">


    <select id="selectById" resultType="team.bishe.wms.bean.Goods">
        select * from wms_goods where good_id = #{id}
    </select>

    <select id="selectAll" resultType="team.bishe.wms.bean.Goods">
        select * from wms_goods
    </select>

    <select id="selectByName" resultType="team.bishe.wms.bean.Goods">
        select *
        from t_w_goods_info
        where good_nm = #{goodsName}
    </select>

    <select id="selectValueByName" resultType="java.lang.Double">
        select
            good_value
        FROM
            t_w_goods_info
        where
            good_nm = #{goodsName}
    </select>

    <select id="selectApproximateByName" resultType="team.bishe.wms.bean.Goods">
        select * from wms_goods where good_name like concat(concat('%',#{name}),'%')
    </select>

    <insert id="insert">
        insert into wms_goods(good_name,good_type,good_size,good_value) values (#{name},#{type},#{size},#{value})
    </insert>

    <update id="update">
        update wms_goods set good_name = #{name},good_type = #{type},good_size = #{size},good_value = #{value}
        where good_id = #{id}
    </update>


</mapper>
